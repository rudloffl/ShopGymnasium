# CELLULE 2 — Fonction print_state() pour comprendre ce qui se passe

def print_state(env, reward=0):
    print(f"\n=== TIME = {env.time} min ===")
    print(f"M1: busy={env.m1.busy}, time_left={env.m1.time_left}, type={env.m1.batch_type}, k={env.m1.batch_k}")
    print(f"M2: busy={env.m2.busy}, time_left={env.m2.time_left}, type={env.m2.batch_type}, k={env.m2.batch_k}")

    print(f"Stock RAW       = {env.stock.raw}")
    print(f"Stock P1        = {env.stock.p1}")
    print(f"Stock P2_INTER  = {env.stock.p2_inter}")
    print(f"Stock P2        = {env.stock.p2}")

    print(f"Backlog P1      = {env.demande_p1}")
    print(f"Backlog P2      = {env.demande_p2}")

    if env.delivery.queue:
        next_arrival = min(t for _, t in env.delivery.queue)
        print(f"Next delivery in = {next_arrival - env.time} min")
        print(f"Delivery queue   = {env.delivery.queue}")
    else:
        print("Next delivery in = none")
        print("Delivery queue   = empty")

    print(f"Reward (step)    = {reward}")



